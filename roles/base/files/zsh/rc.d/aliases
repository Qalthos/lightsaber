#==Common======
alias ls="ls --color"
alias cp="cp -v"
alias chx="chmod +x"
alias q="touch /tmp/q && less +F -R /tmp/q"
alias vim="nvim"
alias v="f -e vim"
alias vdiff="vimdiff -c 'set diffopt+=iwhite'"

#==Ansible=====
alias ansible-net="time ansible-test network-integration --inventory ~/.ansible/test-inventory"
alias ansible-unit="ansible-test units --venv"
alias ansible-sanity="ansible-test sanity --venv"
