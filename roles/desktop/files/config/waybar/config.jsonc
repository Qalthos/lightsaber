  "custom/arch": {
    "format": "| {} îœ²",
    "exec": "checkupdates | wc -l | sed 's/^0$//'",
    "on-click": "kitty yay -Syu",
    "tooltip": false,
    "hide-empty-text": true,
    "interval": 3600
  },
  "custom/fedora": {
    "format": "| {} ï˜",
    "exec": "dnf check-update -q | wc -l | sed 's/^0$//'",
