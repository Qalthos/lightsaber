output 'LG Electronics LG HDR WQHD+ 306NTSUB8630' {
	mode 3840x1600@60Hz
	adaptive_sync off
	alias $ultrawide
}
output 'ASUSTek COMPUTER INC VG245 G6LMQS144188' {
	mode 1920x1080@60Hz
	transform 90
	adaptive_sync off
	alias $tall
}

profile dock {
	output eDP-1 disable
	output $ultrawide enable position 0,0
	output $tall enable position 3840,0
}
profile fallback {
	output eDP-1 enable
	output $ultrawide disable
	output $tall disable
}
profile single {
	output eDP-1 disable
	output $ultrawide enable position 0,0
	output $tall disable
}
profile halfsies {
	output eDP-1 disable
	output $ultrawide enable position 0,0 mode 1920x1600
	output $tall enable position 1920,0
}
